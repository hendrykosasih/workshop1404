BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        Button:
            text: 'Clear'
            on_press: app.handle_clear()
            font_size: 40
        TextInput:
            id: input_name
            text: ''
            font_size: 40
            size_hint_x: 4
    BoxLayout:
        Button:
            text: 'Greet'
            on_press: app.handle_greet()
            font_size: 40
        Label:
            id: output_label
            text: 'Enter your name'
            font_size: 40
            color: (1, 1, 0, 1)
            size_hint_x: 4